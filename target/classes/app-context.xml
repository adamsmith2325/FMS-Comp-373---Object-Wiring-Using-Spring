<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    
    <description> Wiring in dependencies for the container to use. </description>

    <context:component-scan base-package="adamSmithComp373Proj1" />

    <bean id="Facility" class ="adamSmithComp373Proj1.Domain.Facility" scope="prototype" />
    <bean id="FacilityImpl" class ="adamSmithComp373Proj1.Domain.FacilityImpl" scope="prototype">
        <property name="FacilityID" ref="FacilityID" />
        <property name="Name" ref="Name" />
        <property name="Location" ref="Location" />
        <property name="phoneNumber" ref="phoneNumber" />
        <property name="numOfRooms" ref="numOfRooms" />
        <property name="OccupiedRooms" ref="OccupiedRooms" />
    </bean>
    <bean id="FacilityMaintainence" class ="adamSmithComp373Proj1.Domain.FacilityMaintainence" scope="prototype" />
    <bean id="FacilityUSe" class ="adamSmithComp373Proj1.Domain.FacilityUse" scope="prototype" />
    <bean id="Inspection" class ="adamSmithComp373Proj1.Domain.Inspection" scope="prototype" />

</beans>
